{
  "fieldSets": [
    {
			"configurationRole": "style",
      "fields": [
        {
          "label": "background-image",
          "name": "backgroundImage",
          "type": "itemSelector",
          "typeOptions": {
            "itemType": "com.liferay.portal.kernel.repository.model.FileEntry",
            "mimeTypes": [
              "image/png",
              "image/webp",
              "image/jpeg",
              "image/gif",
              "image/apng",
              "image/avif"
            ]
          }
        },
        {
          "name": "overlayColor",
          "label": "overlay-color",
          "type": "colorPicker",
          "defaultValue": "#000000"
        },
        {
          "dataType": "int",
          "label": "alpha",
          "name": "alpha",
          "defaultValue": "40",
          "type": "text",
          "typeOptions": {
            "validation": {
              "min": 0,
              "max": 100,
              "type": "number"
            }
          }
        }
      ]
    },
